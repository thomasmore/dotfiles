#!/bin/bash

sudo add-apt-repository ppa:aacebedo/fasd ppa:neovim-ppa/unstable
sudo apt update
sudo apt install clang gcc clangd gdb cmake make ninja-build neovim ruby ruby-dev gem htop tig tmux pip fish lolcat cowsay fortunes fortune-mod ripgrep fasd tldr

gem install --user-install solargraph

git clone --depth 1 https://github.com/junegunn/fzf.git $HOME/.fzf
$HOME/.fzf/install

git clone --depth 1 https://github.com/wbthomason/packer.nvim ~/.local/share/nvim/site/pack/packer/start/packer.nvim
nvim --headless +PackerInstall +'TSInstall cpp ruby python java lua vim cmake bash' +qall

sh -c "$(curl -fsSL https://starship.rs/install.sh)"

chsh -s /usr/bin/fish
